$weui-FG-1 = rgba(255, 255, 255, 0.5)
$weui-FG-2 = rgba(255, 255, 255, 0.3)
$weui-LINK = #ed90a9
$weui-BG-2 = #191919

*
    margin 0
    padding 0

a
    text-decoration none
    -webkit-tap-highlight-color rgba(0,0,0,0)

.link
    color $weui-LINK


.page
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    overflow-y auto
    -webkit-overflow-scrolling touch
    box-sizing border-box
    opacity 0
    transition opacity 2s
    .page__hd
        padding 40px
        .page__title
            text-align left
            font-size 20px
            font-weight 400
        .page__desc
            margin-top 4px
            color $weui-FG-1

.weui-cells
    margin-top 8px
    background-color $weui-BG-2
    line-height 1.4118
    font-size 17px
    overflow hidden
    position relative
    .weui-cell
        padding 16px
        position relative
        display flex
        .weui-cell__bd
            flex 1

.weui-uploader
    flex 1
    .weui-uploader__hd
        color white
        display flex
        padding-bottom 16px
        align-items center
        .weui-uploader__title
            flex 1
        .weui-uploader__info
            color $weui-FG-2
    .weui-uploader__bd
        margin-bottom -8px
        margin-right -8px
        overflow hidden
        .weui-uploader__files
            list-style none
            .weui-uploader__file
                float left
                margin-right 8px
                margin-bottom 8px
                width 96px
                height 96px
                background url(./images/pic_160.png) no-repeat center center
                background-color green
                &.weui-uploader__file_status
                    position relative
                    &:before
                        content ""
                        position absolute
                        top 0
                        right 0
                        left 0
                        bottom 0
                        background rgba(0,0,0,0.5)

.show
    opacity 1
